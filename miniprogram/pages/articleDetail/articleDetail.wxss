/* miniprogram/pages/articleDetail/articleDetail.wxss */
@import "/wxParse/wxParse.wxss";
.title{
  padding: 10px;
  padding-left: 10px;
  font-weight: bold;
  font-size: 18px;
  border-top:1px solid #eee;

}
.items{
  height: 100rpx;
  padding:0 10rpx;
  flex-direction: row;
  justify-content:flex-start;
  border-top: 1px solid #eee;
  font-size: 12px;
  margin-left: 10px;
  color: #aaa;
}
.items .item-left{
  width: 200rpx;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start
}
.items .item-left .avatar-box{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
}
.items .item-left text{
  margin-left: 20rpx;
}
.items .item-right{
  width: 240rpx;
}
.article-content{
  font-size: 16px;
  padding: 0 20rpx;
  line-height: 26px;
}
.y-box{
  height: 1000rpx;
  align-items: center;
}
.backHome{
  position: fixed;
  bottom: 30px;
  right: 10px;
  background:	#A52A2A;
  opacity: 0.8;
  width: 150rpx;
  height: 150rpx;
  color: white;
  text-align: center;
  border-radius: 50%;
  font-size: 15px;
  align-items: center;
}
.backHome image{
  width: 60%;
  height: 60%
}