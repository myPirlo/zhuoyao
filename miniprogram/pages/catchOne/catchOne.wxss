page{
  width: 100vw;
  height: 100vh;
}
.content{
  width: 100vw;
  height: 100vh;
  background: url(https://636c-cloudfdh-1259038312.tcb.qcloud.la/kv1.jpg?sign=23103c661b9828e7a8e3615f9e009037&t=1556171869) center top;
  background-size: cover;
  align-items: center;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
}
.checkMask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  align-items: center;
}
.arr{
  width: 110px;
  height: 110px;
  justify-content: center;
  align-items: center;
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 50%;
  animation: 0.8s roll infinite ;
}
.btn{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  color: white;
  text-align: center;
  line-height: 100px;
  background: #fa9d3b;
}
@keyframes roll{
  0%{
    width: 120px;
    height: 120px;
    border: 1px solid rgba(255, 255, 255, 1);
    
  }
  25%{
    width: 140px;
    height: 140px;
    border: 1px solid rgba(255, 255, 255,0.8);
  }
  50%{
      width: 160px;
      height: 160px;
      border: 1px solid rgba(255, 255, 255, 0.6);
  }
  75%{
    width: 180px;
    height: 180px;
    border: 1px solid rgba(255, 255, 255,0.4);

  }
  100%{
      width: 200px;
      height: 200px;
      border: 1px solid rgba(255, 255, 255, 0.2);
  }
}
.close{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 20px;
  left: 50%;
  margin-left:-50rpx; 
}
.close image{
  width: 100%;
  height: 100%;
}
.oneAnimal{
  width: 80%;
  padding: 20px 0 180rpx 0;
  background: white;
  border-radius: 10px;
  position: absolute;
  z-index: 500;
  align-items: center;
  text-shadow: 0.2px 0.2px 0.2px #32CD32
}
.title{
  width: 90%;
  text-align: center;
  color: orange;
  border: 1px solid #fa9d3b;
  padding: 10px 0;
  border-radius: 5px;
  box-shadow: 2px 2px 2px #bbb;
}
.o-content{
  width: 90%;
  text-align: center;
  border: 1px solid #00BFFF;
  margin-top: 20px;
  border-radius: 5px;
  padding: 20px 0;
  box-shadow: 2px 2px 2px #bbb;
}
.o-content>view{
  color: #CD853F;
  margin-top: 5px
}
.backHome{
  position: fixed;
  bottom: 30px;
  right: 10px;
  background:	#eee;
  opacity: 0.8;
  width: 150rpx;
  height: 150rpx;
  color: white;
  text-align: center;
  border-radius: 50%;
  font-size: 15px;
  align-items: center;
}
.backHome image{
  width: 60%;
  height: 60%
}