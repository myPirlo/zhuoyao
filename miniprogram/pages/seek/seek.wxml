<!--miniprogram/pages/guard/guard.wxml-->
<view class="guard">
    <view class="guard-card">
        <view class="user">
            <view class="user-header flex">
                <view class="title flex-one">
                    <view class="cn">御灵师资料</view>
                    <view class="en">Introduce</view>
                </view>
            </view>
            <view class="user-content flex">
                <open-data class='avatar' type="userAvatarUrl"></open-data>
                <view class="cell flex-one">
                    <view class="name">
                        <open-data type="userNickName"></open-data>
                    </view>
                    <view class="wechart">日行10km，满资等着你！</view>
                </view>
            </view>
            <view class="user-sub">
                捉妖攻略-为您提供优质的攻略
            </view>
        </view>
    </view>
    <view class="send">
        <button open-type='getUserInfo' bindgetuserinfo="toBegin">开始我的捉妖之旅</button>
    </view>
    <view class="cross" bindtap='crossToBegin'>直接进入</view>
</view>
<view class="pic">
    <image src="https://636c-cloudfdh-1259038312.tcb.qcloud.la/guaiwu/6-1-招风.png?sign=5cb2eddb5d4e93797916f1ee033e97ed&t=1555568055" />
</view>
