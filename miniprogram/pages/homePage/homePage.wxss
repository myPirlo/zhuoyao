/* miniprogram/pages/homePage/homePage.wxss */
page{
  background: #eee
}
.oneArticle{
  width: 95%;
  height: 600rpx;
  background: white;
  border-radius: 4rpx;
  margin-top: 20rpx;
}
.bigImg{
  height: 400rpx;
}
.bigImg image{
  width: 100%;
  height: 100%;
}
.article-title{
  height: 100rpx;
  font-size: 17px;
  font-weight: bold;
  padding:0 10rpx
}
.items{
  height: 100rpx;
  padding:0 10rpx;
  flex-direction: row;
  justify-content: space-between;
  border-top: 1px solid #eee;
  font-size: 12px;
  margin-left: 10px;
  color: #aaa;
}
.items .item-left{
  width: 200rpx;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start
}
.items .item-left .avatar-box{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
}
.items .item-left .avatar-box image{
  width: 100%;
  height: 100%
}
.items .item-left text{
  margin-left: 20rpx;
}
.items .item-right{
  width: 240rpx;
}
